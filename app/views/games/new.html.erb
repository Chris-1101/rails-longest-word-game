<div class="game-wrapper">
  <h1>New Game</h1>

  <% @letters.each do |letter| %>
    <span class="letter"><%= letter %></span>
  <% end %>

  <p>What is the longest word you can find?</p>
  <form class="form-inline justify-content-center" action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input class="form-control" type="text" name="guess" />
    <input class="btn btn-primary" type="submit" value="Play" />
  </form>
</div>
